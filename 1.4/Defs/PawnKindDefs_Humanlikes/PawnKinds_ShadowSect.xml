<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <PawnKindDef Name="EEG_ShadowSectPawnBase" Abstract="True">
    <race>Human</race>
    <defaultFactionType>DankPyon_BrigandFaction</defaultFactionType>
    <backstoryCategories>
      <li>Tribal</li>
    </backstoryCategories>
	<minGenerationAge>18</minGenerationAge>
    <maxGenerationAge>70</maxGenerationAge>
    <chemicalAddictionChance>0.05</chemicalAddictionChance>
    <invNutrition>10</invNutrition>
    <invFoodDef>DankPyon_MealBread</invFoodDef>
    <isFighter>true</isFighter>
    <techHediffsRequired>
      <li>DeathAcidifier</li>
    </techHediffsRequired>
    <initialWillRange>1~2</initialWillRange>
    <initialResistanceRange>3~8</initialResistanceRange>
	<apparelIgnoreSeasons>true</apparelIgnoreSeasons>
	<disallowedTraits>
      <li>Wimp</li>
	  <li>Pyromaniac</li>
	  <li>Nudist</li>
    </disallowedTraits>   
    <requiredWorkTags>
      <li>Violent</li>
    </requiredWorkTags>
    <weaponMoney>150</weaponMoney>
  </PawnKindDef>

  <!-- ========== Cultists ========== -->
  <PawnKindDef ParentName="EEG_ShadowSectPawnBase">
    <defName>EEG_Sect_Novice</defName>
    <label>shadow sect novice</label>
    <combatPower>35</combatPower>
    <itemQuality>Normal</itemQuality>
    <gearHealthRange>
      <min>0.2</min>
      <max>1.1</max>
    </gearHealthRange>
	
	<apparelRequired>
		<li>DankPyon_Headgear_Hood</li>	
		<li>Dankpyon_Apparel_Gambeson</li>
		<li>DankPyon_Apparel_Leather_Tunic</li>	
		<li>DankPyon_Apparel_Trousers</li>
		<li>DankPyon_Handwear_GlovesLeather</li>
		<li>DankPyon_Footwear_BootsLeather</li>
	</apparelRequired>
	<specificApparelRequirements>
		<!-- FullHead -->
		<li>
			<bodyPartGroup>UpperHead</bodyPartGroup>
			<apparelLayer>Overhead</apparelLayer>
			<requiredTag>DankPyon_Headgear_Hood</requiredTag>
			<color>(55,55,55)</color>
		</li>
		<!-- Torso -->
		<li>
			<bodyPartGroup>Torso</bodyPartGroup>
			<apparelLayer>OnSkin</apparelLayer>
			<requiredTag>Dankpyon_Apparel_Gambeson</requiredTag>
			<stuff>WoolMegasloth</stuff>
			<color>(55,55,55)</color>
		</li>
		<li>
			<bodyPartGroup>Torso</bodyPartGroup>
			<apparelLayer>Middle</apparelLayer>
			<requiredTag>DankPyon_Apparel_Leather_Tunic</requiredTag>
			<stuff>Leather_Plain</stuff>
			<color>(55,55,55)</color>
		</li>
		<!-- Legs -->
		<li>
			<bodyPartGroup>Legs</bodyPartGroup>
			<apparelLayer>OnSkin</apparelLayer>
			<requiredTag>DankPyon_Apparel_Trousers</requiredTag>
			<stuff>WoolMegasloth</stuff>
			<color>(55,55,55)</color>
		</li>
		<!-- Hands -->
		<li>
			<bodyPartGroup>Hands</bodyPartGroup>
			<apparelLayer>Middle</apparelLayer>
			<requiredTag>DankPyon_Handwear_GlovesLeather</requiredTag>
			<stuff>Leather_Plain</stuff>
			<color>(55,55,55)</color>
		</li>
		<!-- Feet -->
		<li>
			<bodyPartGroup>Feet</bodyPartGroup>
			<apparelLayer>Middle</apparelLayer>
			<requiredTag>DankPyon_Footwear_BootsLeather</requiredTag>
			<stuff>Leather_Plain</stuff>
			<color>(55,55,55)</color>
		</li>
		<!-- Shield -->
    </specificApparelRequirements>	
    <weaponTags>
      <li>EEG_Knife</li>
    </weaponTags>
	<skills>
	  <li>
        <skill>Melee</skill>
        <range>3~5</range>
      </li>	  
    </skills>
  </PawnKindDef>
